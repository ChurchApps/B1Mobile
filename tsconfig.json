
{
  "compilerOptions": {
    
    "target": "ES6",                       
    "module": "commonjs",                    
     "lib": ["es2017"],   
    //"outDir": "./dist",   
                 
     "allowJs": true,                                        
    "jsx": "react-jsx",                          
     "noEmit": true,                           
     "isolatedModules": true,                  
     //"strict": true,      
     "typeRoots": [ "src/@types" ],                    
     "moduleResolution": "node",                                   
    
    "baseUrl": "./",
    "paths": { "@churchapps/mobilehelper": ["./src/churchapps/mobilehelper"] },                           
     "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                       
    "skipLibCheck": false ,
    "resolveJsonModule": true                        
  },   
}
