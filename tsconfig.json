
{
  "compilerOptions": {
    
    "target": "ES6",                       
    "module": "commonjs",                    
     "lib": ["es2017"],   
    "outDir": "./dist",                    
     "allowJs": true,                                        
    "jsx": "react-jsx",                          
     "noEmit": true,                           
     "isolatedModules": true,                  
     //"strict": true,                          
     "moduleResolution": "node",                                   
    "typeRoots": [ "src/@types" ],                              
     "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                       
    "skipLibCheck": false                      
  },
   "exclude": [
     "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
   ]
}
